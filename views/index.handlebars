<div class="devoured" style="width: 50%; display: inline-block; margin: 0px;">
<h5>Burgers that are devoured!</h5>

<ul class="eatenBurgers">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="notEaten" style="width: 50%; display: inline-block; margin: 0px; float: right;">
<h5 style="text-align: center;">Burgers that aren't eaten!</h5>
<ul class="burgers" style="text-align: center">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div id="order">
<h4>Add a Burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
